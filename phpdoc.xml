<?xml version="1.0" encoding="UTF-8"?>
<phpdocumentor
    configVersion="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://www.phpdoc.org"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/main/data/xsd/phpdoc.xsd"
>
    <title>AR Model Viewer for WooCommerce</title>

    <setting name="template.color" value="purple" />
    <!-- Configuración de rutas -->
    <paths>
        <!-- Directorio de salida de la documentación -->
        <output>docs/</output>
        <!-- Directorio de caché -->
        <cache>.phpdoc/cache</cache>
    </paths>

    <!-- Configuración de versiones -->
    <version number="2.0.0">
        <api>
            <!-- Configuración de la fuente de los archivos -->
            <source dsn=".">
                <path>./</path>
            </source>
            <!-- Exclusión de rutas no deseadas -->
            <ignore>
                <path>vendor</path>
                <path>composer.json</path>
                <path>composer.lock</path>
            </ignore>
        </api>
    </version>
</phpdocumentor>